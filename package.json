{
  "name": "test-docker-express-mongo",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/test-docker-express-mongo.min.js",
  "scripts": {
    "test":
      "nyc ./node_modules/mocha/bin/_mocha  --colors --require ts-node/register --exit  -- src/**/*.spec.ts",
    "start": "node dist/test-docker-express-mongo.min.js",
    "clean": "rimraf dist build *tgz",
    "lint": "tslint src/**/*.ts",
    "build:dev": "npm run clean && cross-env NODE_ENV=dev webpack",
    "serve:dev": "nodemon  ./build/test-docker-express-mongo.js",
    "watch:dev":
      "npm-run-all clean lint --parallel  \"build:dev -- --watch\" serve:dev",
    "build:prod": "npm run clean && cross-env NODE_ENV=prod webpack",
    "serve:prod": "nodemon --watch  dist/test-docker-express-mongo.min.js",
    "watch:prod":
      "npm-run-all clean lint --parallel \"build:prod -- --watch\" serve:prod"
  },
  "keywords": ["docker", "nodejs", "express"],
  "author": "Alexandre Saker",
  "email": "saker.alexandre@gmail.com",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "helmet": "^3.11.0",
    "mongoose": "^5.0.10"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/mongoose": "^5.0.7",
    "@types/node": "^9.4.6",
    "@types/sinon": "^4.3.0",
    "babel-cli": "^6.22.2",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.3.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "cross-env": "^5.1.3",
    "mocha": "^5.0.1",
    "nodemon": "1.14.12",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.4.2",
    "supertest": "^3.0.0",
    "ts-loader": "^3.5.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  },
  "nyc": {
    "reporter": ["lcov", "text-summary"],
    "extension": [".ts"],
    "cache": true,
    "exclude": ["src/**/*.spec.ts"],
    "include": ["src/**/*.ts"]
  }
}
